<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PosSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PosSystem.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PosSystem">

    <!-- Login es la primera página -->
    <ShellContent 
        Title="Login" 
        ContentTemplate="{DataTemplate local:LoginPage}" 
        Route="LoginPage"
        Shell.PresentationMode="Modal"
        Shell.FlyoutBehavior="Disabled" />
    <ShellContent Title="Inicio" ContentTemplate="{DataTemplate local:MainPage}" Route="//MainPage" />

    <!-- Página Principal (Home) -->
    <ShellContent 
        Title="Inicio" 
        ContentTemplate="{DataTemplate local:MainPage}" 
        Route="MainPage" />

    <!-- Página de Lista de Clientes -->
    <ShellContent 
        Title="Clientes" 
        ContentTemplate="{DataTemplate local:ClientListPage}" 
        Route="ClientListPage" />

</Shell>
